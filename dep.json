{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
       "name": "simple-deployment",
       "labels": {
          "app": "simple"
       }
    },
    "spec": {
       "replicas": 3,
       "selector": {
          "matchLabels": {
             "app": "simple"
          }
       },
       "template": {
          "metadata": {
             "labels": {
                "app": "simple"
             }
          },
          "spec": {
             "containers": [
                {
                   "name": "simpleweb",
                   "image": "sakshim21/simple-app:latest",
                   "ports": [
                      {
                         "containerPort": 8000
                      }
                   ]
                }
             ]
          }
       }
    }
 }